<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp"
        android:weightSum="4"
        >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:layout_below="@id/x_button"
        android:layout_weight="0.5"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/x_button"
        android:layout_weight="3.2"
        android:layout_marginHorizontal="8dp"
        >

        <TextView
            android:id="@+id/tv_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gita Diaz Pangesti"
            android:textColor="#2d2d2d"
            />

        <TextView
            android:id="@+id/tv_email_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gitadiazp@gmail.com"
            />

        <TextView
            android:id="@+id/tv_phone_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="082298176450"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_attend"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/rounded_yellow"
        android:text="Attend"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:textSize="12sp"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>